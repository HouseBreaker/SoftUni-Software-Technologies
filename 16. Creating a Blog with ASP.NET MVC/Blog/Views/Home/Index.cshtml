@{
	ViewBag.Title = "Home Page";
}

@model List<Blog.Models.Post>

@foreach (var post in Model)
{
	var author = post.Author != null ? post.Author.FullName : "anonymous";
	var dateFormatted = $"{post.Date:dddd, d MMMM yyyy}";

	<section class="row">
		<article class="post col-md-6">
			<h2 class="title">@Html.Raw(post.Title)</h2>
			<div class="about">
				Posted by <i>(@author)</i> on <i>@dateFormatted)</i>
			</div>
			<div class="body">
				@Html.Raw(post.Body)
			</div>
		</article>
	</section>
}